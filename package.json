{
  "name": "murder-party-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsc server.ts src/entry-server.ts --outDir dist --esModuleInterop --module NodeNext --moduleResolution node16",
    "build:client": "vite build",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "build": "npm run build:client && npm run build:server",
    "start": "node server.js",
    "lint": "eslint .",
    "preview": "tsc -b && vite build && vite preview",
    "launch": "vite preview",
    "fix-react-imports": "node add-react-imports.js",
    "fix-tsx-imports": "node fix-tsx-imports.js",
    "build:ssr": "npm run fix-react-imports && npm run fix-tsx-imports && tsc -p tsconfig.ssr.json && tsc server.ts --outDir dist --esModuleInterop --module NodeNext --moduleResolution node16",
    "start:ssr": "node dist/server.js",
    "dev:ssr": "npm run build:ssr && npm run start:ssr"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "@types/express": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "express": "^5.1.0",
    "i18next": "^25.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^6.22.1",
    "tailwindcss": "^4.1.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.2"
  }
}
