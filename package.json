{
  "name": "murder-party-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:front": "vite",
    "dev:api": "nodemon --watch backend/api --watch backend/services --watch backend/app.ts --ext ts --exec \"npx tsc -p backend/tsconfig.api.json && node backend/dist/app.js\"",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:front\"",
    "build:api": "npx tsc -p backend/tsconfig.api.json",
    "start:api": "node dist/app.js",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "tsc -b && vite build && vite preview",
    "launch": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "i18next": "^25.0.1",
    "lowdb": "^7.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^7.5.1",
    "tailwindcss": "^4.1.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.2"
  }
}
